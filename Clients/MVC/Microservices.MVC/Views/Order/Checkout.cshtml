
@{
    ViewData["Title"] = "Checkout";
}
@using Microservices.MVC.Models.Basket
@model Microservices.MVC.Models.Order.CheckoutInfoRequest 

<form asp-controller="Order" asp-action="Checkout" method="post">
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Adres Bilgileri</h5>

                    <div class="mb-3">
                        <label asp-for="Province" class="form-control"></label>
                        <input asp-for="Province" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="District" class="form-control"></label>
                        <input asp-for="District" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Street" class="form-control"></label>
                        <input asp-for="Street" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Line" class="form-control"></label>
                        <input asp-for="Line" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ZipCode" class="form-control"></label>
                        <input asp-for="ZipCode" class="form-control" />
                    </div>


                    <h5 class="card-title">Ödeme Bilgileri</h5>

                    <div class="mb-3">
                        <label asp-for="CardName" class="form-control"></label>
                        <input asp-for="CardName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CardNumber" class="form-control"></label>
                        <input asp-for="CardNumber" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Expiration" class="form-control"></label>
                        <input asp-for="Expiration" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CVV" class="form-control"></label>
                        <input asp-for="CVV" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sipariş Özeti</h5>
                    
                    <table class="table table-hover">
                        
                        @foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td><a asp-controller="Home" asp-action="Detail" asp-route-courseId="@item.CourseId">
                                    @item.CourseName
                                </a></td>

                                <td>@item.Price</td>
                            </tr>
                        }

                        <tr>
                            <td>@(ViewBag.basket.HasDiscount ? "İndirimli Toplam Fiyat : " : "Toplam Fiyat : ")</td>
                            <td>@ViewBag.basket.TotalPrice ₺</td>
                        </tr>

                    </table>
                    
                    <button type="submit" class="btn btn-outline-success">Siparişi Tamamla</button>
                </div>
            </div>
        </div>
    </div>

</form>

