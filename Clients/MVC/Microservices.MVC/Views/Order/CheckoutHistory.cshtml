
@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<Microservices.MVC.Models.Order.OrderViewModel>


<div class="row">
    <div class="col-md-12">
        
        <div class="card">
            <div class="card-body">
                
                <h5 class="card-title">Ödeme Geçmişi</h5>
                
                @if(Model.Any()){
                    {
                        <table class="table table-striped table-hover">
                            
                            <tr>
                                <th>Sipariş (Ödeme) No</th>
                                <th>Satın Alma Tarihi</th>
                                <th>Detaylar</th>
                            </tr>
                            
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    
                                    <table class="table table-striped table-hover">
                                        <tr>
                                            <th>Kurs Adı</th>
                                            <th>Fiyatı</th>
                                        </tr>
                                        
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>@orderItem.Price ₺ </td>
                                            </tr>
                                        }
                                    </table>

                                </tr>
                            }

                        </table>
                    }}
                else
                {
                    <div class="alert alert-info">Satın Aldığınız Herhangi Bir Kurs Bulunmamaktadır.</div>
                }

            </div>
        </div>

    </div>
</div>



