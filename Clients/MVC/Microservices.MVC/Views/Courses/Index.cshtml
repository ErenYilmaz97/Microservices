
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Microservices.MVC.Models.Catalog.CourseViewModel>


<div class="row">
    <div class="col-md-12">
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                
                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-2">Kurs Oluştur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Kurs Adı</th>
                            <th>Fiyat</th>
                            <th>Süre</th>
                            <th>İşlemler</th>
                        </tr>
                        </thead>
                    
                        <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td><img src="@course.PictureUrl" class="img-thumbnail" width="72px"/></td>
                                <td>@course.Name</td>
                                <td>@course.Price</td>
                                <td>@course.Feature.Duration</td>
                                <td>
                                    <a asp-controller="Courses" asp-action="Update" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">Güncelle</a>
                                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Henüz Kursunuz Yok.
                    </div>
                }
               
            </div>
        </div>

    </div>
</div>

