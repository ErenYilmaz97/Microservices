{
  "Routes": [
    {
      //ÝSTEÐÝN YÖNLENDÝRÝLECEÐÝ CATOLOG API URL
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5011
        }
      ],

      //CLIENT'IN ISTEK YAPACAÐI URL
      "UpstreamPathTemplate": "/services/catalog/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",

      //GELEN TOKENDA AUD OLARAK RESOURCE_GATEWAY OLACAK.
      //CATOLOG API'A ÝSTEK GELDÝYSE, TOKEN AUD'UNDA CATOLOG_FULLPERMÝSSÝON DA OLACAK.
      //EÐER TOKENDA BU ÞARTLAR SAÐLANMIYORSA, CATOLOG API'A HÝÇ ÝSTEK ATMADAN 401 DÖN.
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme",
        "AllowedScopes": [ "catalog_fullpermission" ]
      }
    },

